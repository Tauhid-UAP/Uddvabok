<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenbg"
    tools:context=".RegiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="310dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="40sp"
            android:text="@string/create_account"
            android:textAllCaps="true"
            android:textColor="@color/colorYellow"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/f_name"
            android:inputType="textPersonName"
            android:hint="@string/first_name"
            android:textColor="@color/colorYellow"
            android:textColorHint="@color/colorYellow"
            android:layout_weight="1"

            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/l_name"
            android:inputType="textPersonName"
            android:hint="@string/last_name"
            android:textColor="@color/colorYellow"
            android:textSize="22sp"
            android:layout_weight="1"
            android:textColorHint="@color/colorYellow"

            />

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:hint="@string/email_address"
            android:textColor="@color/colorYellow"
            android:textSize="22sp"
            android:textColorHint="@color/colorYellow"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/psw"
                android:inputType="numberPassword"
                android:hint="@string/password"
                android:textColor="@color/colorYellow"
                android:textColorHint="@color/colorYellow"
                android:layout_weight="1"

                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confirm_psw"
                android:inputType="numberPassword"
                android:hint="@string/confirm_password"
                android:textColor="@color/colorYellow"
                android:textColorHint="@color/colorYellow"
                android:layout_weight="1"

                />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact"
            android:inputType="phone"
            android:hint="@string/contact_number"
            android:textColor="@color/colorYellow"
            android:textColorHint="@color/colorYellow"
             />

        <Button
            android:id="@+id/btn_register_regi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_register"
            android:background="@drawable/btnloginbg"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textAllCaps="true"

            />
        <TextView
            android:id="@+id/btn_or_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColorLink="@color/colorYellow"
            android:textAllCaps="true"
            android:textColor="@color/colorRed"
            android:layout_marginLeft="150dp"
            />
        <TextView
            android:id="@+id/txt_login_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/already_account"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColorLink="@color/colorYellow"
            android:textAllCaps="true"
            android:textColor="@color/colorRed"

            />




    </LinearLayout>

</LinearLayout>